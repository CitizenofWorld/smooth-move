<h1 class="page-title">ALL LISTINGS</h1>

<!-- Filter by tag -->
<% @tags.each do |tag| %>
	<i class="fa fa-tags" aria-hidden="true"></i><a href="/listings?tag_id=<%= tag.id %> "><%= tag.name %></a>
<% end %>	
<br>


<!-- ajax call -->
	<!-- listen for click on option, capture option's value -->
	<!-- onclick, addclass "show" selected tag -->
<script>
	$('select').on("change", function(event){
		console.log($(event.target).val());
		// @listings = Listing.last; 
	})
</script>


<!-- HTML section -->
<div class="container">
  <div class="row">
    <% @listings.each do |listing | %>
      <div class="col-lg-4 col-md-6 mb-4">
        <div class="card h-100">
          <a href="#"><img class="card-img-top" src="<%= listing.image %>" alt=""></a>
          <div class="card-body">
            <h4 class="card-title">
                   <a href="/listings/<%=listing.id %>"><%= listing.title %></a>
                  </h4>
            <h5>$<%= listing.price %></h5>
            <p class="card-text">
              <%=listing.description %>
            </p>
          </div>
          <div class="card-footer">
            <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>

            <% listing.tags.each do |tag| %>
              <div><i class="fa fa-tags" aria-hidden="true"></i>
                <%=tag.name %>
              </div>
            <% end %>

          </div>
        </div>
      </div>
      <% end %>

        <% session[:return_to]='/listings' %>

  </div>
  <!-- /.row -->
</div>
<!-- /container -->
