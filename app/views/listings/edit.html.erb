<h1>EDITITNG A LISTING</h1>

<%= form_tag "/listings/#{@listing.id}", method:"put" do %>

     <label for="title">Title</label>
  <input type="text" name="title" value=" <% @listing.title %>">

  <label for="street">Street</label>
  <input type="text" name="street" value="<% @listing.street %>">

  <label for="city">City</label>
  <input type="text" name="city" value="<% @listing.city %>">

  <label for="postcode">Post Code</label>
  <input type="text" name="postcode" value="<% @listing.postcode %>">

  <label for="moving_date">Moving Date</label>
  <input type="date" name="moving_date" value="<% @listing.moving_date %>">

  <label for="moving_time">Moving Time</label>
  <input type="time" name="moving_time" value="<% @listing.moving_time %>">

  <label for="price">Price</label>
  <input type="text" name="price" value="<% @listing.price %>">

  <label for="description">Description</label>
  <input type="text" name="description" value="<% @listing.description %>">

  <label for="image">Image</label>
  <input type="text" name="image" value="<% @listing.image %>">

  <button >Submit</button>

<% end %>
